{
  "name": "truffle-todolist",
  "version": "1.0.0",
  "description": "todo list for ethereum blockchain",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "truffle:develop": "truffle develop",
    "truffle:migrate": "truffle migrate --reset --network ganache",
    "truffle:test": "truffle test --network ganache",
    "truffle:verify": "truffle run verify",
    "prettier:solidity": "prettier --write contracts/**/*.sol"
  },
  "author": "Kris Urbas @krzysu",
  "license": "MIT",
  "dependencies": {
    "@truffle/hdwallet-provider": "^1.0.30",
    "@walletconnect/web3-provider": "^1.0.0-beta.46",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-redux": "^7.2.0",
    "react-scripts": "3.3.1",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0",
    "web3": "^1.2.5",
    "web3modal": "^1.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "prettier": "^1.19.1",
    "prettier-plugin-solidity": "^1.0.0-alpha.36",
    "truffle": "^5.1.9",
    "truffle-assertions": "^0.9.2",
    "truffle-security": "^1.7.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
